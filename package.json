{
  "name": "crudx-workspace",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf node_modules",
    "build": "lerna run build",
    "build:crudx": "lerna run build --scope=ngx-crudx",
    "start:demo": "lerna exec --scope=ngx-crudx-demo -- ng serve",
    "prerelease": "yarn build:crudx",
    "release": "release-it"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "12",
    "lerna": "^4.0.0",
    "release-it": "^14.12.3",
    "rimraf": "^3.0.2",
    "typescript": "4.3.5"
  }
}
